<p id="notice"><%= notice %></p>

<h1>Defects</h1>

<div id="datatable">
<table class='tablesorter-default'>
  <thead>
    <tr>
      <th>Location</th>
      <th>Description</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @defects.each do |defect| %>
      <tr>
        <td><%= defect.Location %></td>
        <td><%= defect.Description %></td>
        <td><%= defect.created_at %></td>
        <td><%= link_to 'Show', defect %></td>
        <td><%= link_to 'Edit', edit_defect_path(defect) %></td>
        <td><%= link_to 'Destroy', defect_path(defect), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div id="details">
</div>
